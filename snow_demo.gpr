with "config/snow_config.gpr";
with "snow.gpr";

project Snow_Demo is

   type OS_Type is ("Windows_NT", "Unix");
   Target_OS : OS_Type := external ("OS", "Unix");

   for Source_Dirs use ("src/");
   for Object_Dir use "obj/" & Snow_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("snow_demo.adb");

   package Compiler is
      Common_Switches := Snow_Config.Ada_Compiler_Switches & ("-Os", "-g0");
      case Target_OS is
         when "Windows_NT" =>
            for Default_Switches ("Ada") use Common_Switches & ("-gnatep=platform_windows.def");
         when "Unix" =>
            for Default_Switches ("Ada") use Common_Switches & ("-gnatep=platform_unix.def");
      end case;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es");
   end Binder;

   package Linker is
      for Default_Switches ("Ada") use ("-s", "-Wl,--gc-sections");
   end Linker;

end Snow_Demo;